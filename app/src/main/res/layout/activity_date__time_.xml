<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Date_Time_Activity">

    <LinearLayout
        android:id="@+id/linearLayoutDate"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bccolor"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Select Date"
            android:textColor="@color/backColor"
            android:textColorHint="@color/backColor"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/starting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Starting Date"
            android:textColor="@color/backColor"
            android:textColorHint="@color/backColor"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="To"
            android:textColor="@color/backColor"
            android:textColorHint="@color/backColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ending_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Ending Date"
            android:textColor="@color/backColor"
            android:textColorHint="@color/backColor"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutTime1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/linearLayoutDate"
        android:layout_marginTop="10dp"
        android:background="@drawable/bccolor"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Select Time"
            android:textColor="@color/backColor"
            android:textColorHint="@color/backColor"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/linearLayoutTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutDate"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:hint="Starting Time"
                android:textColor="#000"
                android:textColorHint="#000"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="SELECT TIME"
                app:layout_constraintLeft_toRightOf="@+id/tvTime"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTime5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutTime"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textColorHint="#000"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:hint="Ending Time"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="SELECT TIME"
                app:layout_constraintLeft_toRightOf="@+id/tvTime2"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutTime1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutTime1"
            android:background="@drawable/bccolor"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Select Type of Vehicle's"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/linearLayoutBtnTwoWheeler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTwoWheelerImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_bike" />

                <Button
                    android:id="@+id/btnTwoWheeler"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Two Wheeler" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutBtnFourWheeler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_car" />

                <Button
                    android:id="@+id/btnFourWheeler"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Four Wheeler" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="next" />


</RelativeLayout>
